<Window x:Class="ElectrodeListSimplifier.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectrodeListSimplifier.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <TextBox x:Name="InputTextBox" Text="Enter electrodes, separated by comma:" TextWrapping="Wrap" Margin="10,10,105,181" MouseLeftButtonDown="InputTextBox_MouseLeftButtonDown" GotFocus="InputTextBox_GotFocus" Grid.RowSpan="2"/>
        <Button x:Name="SimplifyButton" Content="Simplify" Margin="300,10,10,181" Click="SimplifyButton_Click"/>
        <TextBox x:Name="ResultTextBox" Text="" TextWrapping="Wrap" Margin="10,58,10,133" IsReadOnly="True"/>


    </Grid>
</Window>
